<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profiler_connector"
    android:id="@+id/rlUserProfilerConnector"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/ivBackground"
        android:adjustViewBounds="true"
        android:src = "@drawable/user_profiler_introduction"
        android:layout_gravity="top|center|bottom" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "@string/allow_profiling"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="40sp"
        android:onClick="user_profiling_starter"
        android:id="@+id/button5" />


</RelativeLayout>