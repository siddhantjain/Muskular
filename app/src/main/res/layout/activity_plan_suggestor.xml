<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.siddhantjain.muskular.plan_suggestor">

    <ImageButton
        android:id="@+id/btnPlanA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/plan_a"
        style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg"
        android:onClick="update_profile"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnPlanC"
        android:layout_alignEnd="@+id/btnPlanC"></ImageButton>
    <ImageButton
        android:id="@+id/btnPlanB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/plan_b"
        style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg"
        android:onClick="update_profile"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ImageButton>
    <ImageButton
        android:id="@+id/btnPlanC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/plan_c"
        style="@style/DefaultButtonText"
        android:background="@drawable/button_default_bg"
        android:onClick="update_profile"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnPlanB"
        android:layout_alignEnd="@+id/btnPlanB"
        android:layout_marginBottom="71dp"></ImageButton>

</RelativeLayout>
