<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome_screen"
    android:id="@+id/rlRoot"
    >


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:id = "@+id/ivBackground"/>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/sign_up"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/button_welcome_screen"
        android:alpha="0.25"
        android:onClick="user_sign_up"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_alignLeft="@+id/btnSingIn"
        android:layout_alignStart="@+id/btnSingIn" />

    <Button
        android:id="@+id/btnSingIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_welcome_screen"
        android:alpha="0.25"
        android:text="@string/sign_in"
        android:textColor="#000000"
        android:textSize="20sp"
        android:onClick="user_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_above="@+id/btnSignUp" />


</RelativeLayout>
